  delay(10);
  for (int i = 0; i < duration; i++) {
    buzzer.setVoltage(vol1, false);
    buzzer.setVoltage(vol2, false);
    leds.setBrightness(3, 0xff);
    leds2.setBrightness(3, 0xff);
    leds3.setBrightness(3, 0xff);
